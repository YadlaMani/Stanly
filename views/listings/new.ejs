<% layout("/layouts/boilerplate")-%>
<body>
    <div class="row mt-4 mb-2">
        <div class="col-8 offset-2">
            <h3>Add new Listing </h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Title is neccessary</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Describe your place" class="form-control" required></textarea>
            <div class="invalid-feedback">Enter description before creating</div>

        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" placeholder="Paste image link" type="file" class="form-control" required>
            <div class="invalid-feedback">Paste a valid image link</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Price / night" type="number" class="form-control" required>
                <div class="invalid-feedback">Give some valid price</div>
    
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control" required>
                <div class="invalid-feedback">Enter a valid country</div>
               </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter city" type="text" class="form-control" required>
            <div class="invalid-feedback">Enter a valid city</div>
        </div>
       
       
        <button class="btn btn-dark add-btn">Add Listing</button>
    </form>
        </div>
        
    </div>
    
</body>
